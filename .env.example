# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=rwanda_eats_reserve

# Server Configuration
PORT=9000
NODE_ENV=development

# Session Secret (change this to a random string for production)
SESSION_SECRET=your-secret-key-here

# Email Configuration (MailerSend)
EMAIL_HOST=smtp.mailersend.net
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
MAILERSEND_API_KEY=your_mailersend_api_key
MAILERSEND_API_URL=https://api.mailersend.com/v1
MAILERSEND_FROM_EMAIL=noreply@yourdomain.com
MAILERSEND_FROM_NAME=Rwanda Eats Reserve

# Email Configuration (Brevo/Sendinblue)
BREVO_API_KEY=your_brevo_api_key
BREVO_FROM_EMAIL=noreply@yourdomain.com
BREVO_FROM_NAME=Rwanda Eats Reserve

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads

# Payment Integration (Stripe/PayPal)
STRIPE_SECRET_KEY=your_stripe_secret
STRIPE_PUBLISHABLE_KEY=your_stripe_public
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret

# SMS/Notification Services
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_phone

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Redis Configuration (for session storage/caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Application URLs
BASE_URL=http://localhost:9000
FRONTEND_URL=http://localhost:9000
API_URL=http://localhost:9000/api

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PAYMENT_PROCESSING=false
ENABLE_GOOGLE_MAPS=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Third-party Integration
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret